{

        "version": "0.2.0",
        "configurations": [
             {
                 "name": ".NET Core Launch (console)",
                 "type": "coreclr",
                 "request": "launch",
                 "preLaunchTask": "build",
                 "program": "${workspaceFolder}/Xadrez/bin/Debug/netcoreapp2.2/Xadrez.dll",
                 "args": [],
                 "cwd": "${workspaceFolder}/Xadrez",
                 "console": "externalTerminal",
                 "stopAtEntry": false,
                 "internalConsoleOptions": "openOnSessionStart"
             },
             {
                 "name": ".NET Core Attach",
                 "type": "coreclr",
                 "request": "attach",
                 "processId": "${command:pickProcess}"
             }
         ]
     }